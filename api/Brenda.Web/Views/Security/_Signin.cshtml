@model SigninPost
@{ 
    Layout = "_LayoutSecurity";
}

<div class="d-flex flex-column flex-root">
    <div class="login login-3 wizard d-flex flex-column flex-lg-row flex-column-fluid">
        <div class="login-aside d-flex flex-column flex-row-auto">
            <div class="d-flex flex-column-auto flex-column pt-15">
                <a href="https://brendarewards.com" class="login-logo text-center pt-lg-25 pb-10">
                    <img src="~/assets/media/logos/logo-1.png" alt="" />
                </a>
                <h3 class="font-weight-bolder text-center font-size-h4 text-dark-50 line-height-xl">
                    Plataforma de Recomensas<br />
                    Brenda
                </h3>
            </div>
            <div class="aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-x-center"
                 style="background-position-y: calc(100% + 5rem); background-image: url(assets/media/svg/illustrations/login-visual-5.svg)">
            </div>
        </div>
        <div class="login-content flex-row-fluid d-flex flex-column p-10">
            <div class="text-right d-flex justify-content-center">
                <div class="top-signin text-right d-flex justify-content-end pt-5 pb-lg-0 pb-10">
                    <span class="font-weight-bold text-muted font-size-h4">Tendo problemas?</span>
                    <a href="#" class="font-weight-bold text-primary font-size-h4 ml-2" id="kt_login_signup">Obter Ajuda</a>
                </div>
            </div>
            <div class="d-flex flex-row-fluid flex-center">
                <div class="login-form">
                        <form asp-controller="security" asp-action="sign-in" method="post" id="kt_login_singin_form" class="form" novalidate="novalidate">
                            <div class="pb-5 pb-lg-15">
                                <h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Login</h3>
                                <div class="text-muted font-weight-bold font-size-h4">
                                    Novo Aqui?
                                    <a asp-action="sign-up" asp-controller="security" class="text-primary font-weight-bolder">Crie sua Conta!</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="font-size-h6 font-weight-bolder text-dark">E-mail</label>
                                @Html.TextBoxFor(x => x.Username, new { @class= "form-control h-auto py-7 px-6 rounded-lg border-0" })
                            </div>
                            <div class="form-group">
                                <div class="d-flex justify-content-between mt-n5">
                                    <label class="font-size-h6 font-weight-bolder text-dark pt-5">Senha</label>

                                    <a href="#" class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5">
                                        Esqueci minha senha.
                                    </a>
                                </div>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control h-auto py-7 px-6 rounded-lg border-0" })
                            </div>
                            <div class="pb-lg-0 pb-5">
                                <button type="submit" id="kt_login_singin_form_submit_button" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">Entrar</button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>