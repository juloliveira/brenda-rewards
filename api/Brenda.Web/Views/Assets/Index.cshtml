@model IEnumerable<Brenda.Contracts.V1.Requests.AssetForm>
@{
    ViewBag.Subtitle = "Gerenciador de Assets";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card card-custom gutter-b">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">Lista de Assets</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="example mb-10">
                    <div class="example-preview">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Tag</th>
                                    <th scope="col">Título</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Criado Em</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"><a href="~/asset/@item.Id/view">@item.Id.ToString().ToUpper().Substring(0, 8)</a></th>
                                        <td>@item.Title</td>
                                        <td>@item.ActionName</td>
                                        <td></td>
                                        <td>
                                            @if (item.Enable)
                                            {
                                                <span class="label label-inline label-light-success font-weight-bold">Habilitado</span>
                                            }
                                            else
                                            {
                                                <span class="label label-inline label-light-danger font-weight-bold">Pendente</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section head {
    <style>
    </style>
}

@section scripts {

}

