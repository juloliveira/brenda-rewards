@model Brenda.Contracts.V1.Requests.CampaignForm

    <div class="card-body">
        <div class="form-group row">
            <div class="col-lg-6">
                <label>Título da Campanha:</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Digite o título da campanha" })
            </div>
            <div class="col-lg-6">
                <label>Ação da Campanha:</label>
                <select asp-items="ViewBag.Formats" asp-for="ActionId" class="form-control"></select>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <label>Descrição da Campanha:</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", style = "overflow: hidden; overflow-wrap: break-word; resize: none; height: 100px;", placeholder = "Descreva detalhes da campanha" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-8">
                <label>Período de Campanha:</label>
                <div class="input-daterange input-group" id="kt_datepicker_5">
                    @Html.TextBoxFor(x => x.DefinitionsValidationStart, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = "readonly", placeholder = "Início da campanha" })
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="la la-ellipsis-h"></i></span>
                    </div>
                    @Html.TextBoxFor(x => x.DefinitionsValidationEnd, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = "readonly", placeholder = "Fim da campanha" })
                </div>
                <span class="form-text text-muted">Escolha uma data de início e fim para a campanha</span>
            </div>
            <div class="col-lg-4">
                <label>Recompensa:</label>
                <div class="input-group">
                    <div class="input-group-append"><span class="input-group-text"><i class="la la-money-bill-alt"></i></span></div>
                    @Html.TextBoxFor(x => x.Reward, new { @class = "form-control", placeholder = "BRE$" })
                    <span class="form-text text-muted">Recompensa da campanha</span>
                </div>
            </div>
        </div>
        <div class="form-group row">

        </div>
        <div class="mb-3 font-weight-bold font-size-lg">Definições:</div>
        <div class="form-group row">
            <label class="col-3 col-form-label">Validar Local</label>
            <div class="col-3">
                <span class="switch switch-sm switch-icon">
                    <label>
                        @Html.CheckBoxFor(x => x.DefinitionsValidateGeoLocation)
                        <span></span>
                    </label>
                </span>
            </div>
        </div>
    </div>
<div class="card-footer">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-8">
            <input type="submit" class="btn btn-primary mr-2" value="Salvar Campanha" />
            <button type="reset" class="btn btn-secondary">Cancelar</button>
        </div>
    </div>
</div>