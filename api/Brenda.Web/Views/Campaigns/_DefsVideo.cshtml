@model CampaignViewModel

<div class="card card-custom gutter-b example example-compact">

    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-start-up text-primary"></i>
            </span>
            <h3 class="card-title">Ação de Video</h3>
        </div>
        <div class="card-toolbar">
            <button class="btn btn-primary mr-2" data-toggle="modal" data-target="#modal_assets">
                <i class="fa la-check icon-xs"></i>
                Selecionar Asset de Video
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.AssetId.HasValue)
        {
            <div class="form-group row">
                <label>Nenhum <strong>asset de video</strong> foi selecionado para essa campanha.</label>
                <small>Os asseets são os conteúdos apresentados para os usuários que ativam as campanhas através de QRCode.</small>
            </div>
        }
        else 
        {
            <p><strong>Título:</strong> @Model.AssetTitle</p>
            <video id="campaign-player"
                   controls
                   preload="auto">
                <source src="@Model.AssetResource" type="video/mp4" />

            </video>
        }
    </div>

</div>



