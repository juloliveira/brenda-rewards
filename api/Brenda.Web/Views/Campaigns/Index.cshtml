@model IEnumerable<CampaignViewModel>
@{
    ViewBag.Subtitle = "Campanhas";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card card-custom card-stretch gutter-b">
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label font-weight-bolder text-dark">Campanhas Ativas</span>
                    <span class="text-muted mt-3 font-weight-bold font-size-sm">Total de 32 campanhas ativas</span>
                </h3>
            </div>
            <div class="card-body pt-2 pb-0">
                <div class="table-responsive">
                    <table class="table table-borderless table-vertical-center">
                        <thead>
                            <tr>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                                <th class="p-0 w-50px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="pl-0 py-5">
                                        <img-format src="@item.ActionImage"></img-format>
                                    </td>
                                    <td class="pl-0">
                                        <a href="~/campaign/@item.Id/view" class="text-dark font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Title</a>
                                        <span class="text-muted font-weight-bold d-block">@item.ActionName</span>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-muted font-weight-bold mt-2 d-block font-size-xs">
                                            Criado a
                                        </span>
                                        <span class="text-dark-75 font-weight-bold" data-toggle="tooltip" data-placement="left" title="" data-original-title="@item.CreatedAt.Friendly()">
                                            @item.CreatedAt.TimeAgo()
                                        </span>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-muted font-weight-bold d-block">
                                            Recompensa
                                        </span>
                                        <span class="text-dark-75 font-weight-bolder d-block font-size-lg">
                                            BR$ @item.Reward
                                        </span>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-muted font-weight-bold d-block">
                                            Saldo
                                        </span>
                                        <span class="text-dark-75 font-weight-bolder d-block font-size-lg">
                                            BR$ @item.Balance
                                        </span>
                                    </td>
                                    <td class="text-right">
                                        @if (item.Status == Brenda.Core.CampaignStatus.OnGoing)
                                        {
                                            <a href="#" class="btn btn-icon btn-light-success pulse pulse-success mr-5">
                                                <i class="flaticon2-protected"></i>
                                                <span class="pulse-ring"></span>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="label label-primary label-inline mr-2">@item.Status</span>
                                        }
                                    </td>
                                    <td class="text-right pr-0">

                                        @if (item.Status == Brenda.Core.CampaignStatus.OnGoing)
                                        {
                                            <a href="~/campaign/@item.Id/ongoing" class="btn btn-sm btn-light-success">
                                                <i class="flaticon2-chat-1"></i> Visualizar
                                            </a>
                                            <a href="~/campaign/@item.Id/publish" class="btn btn-sm btn-success">
                                                <i class="flaticon2-chat-1"></i> Republicar
                                            </a>
                                        }
                                        else if (item.ChallengeId.HasValue)
                                        {
                                            <a href="~/campaign/@item.Id/view" class="btn btn-sm btn-light-facebook">
                                                <i class="flaticon2-chat-1"></i> Visualizar
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="~/campaign/@item.Id/publish" class="btn btn-sm btn-success">
                                                <i class="flaticon2-chat-1"></i> Publicar
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section head {
    <style>
    </style>
}

@section scripts {

}

